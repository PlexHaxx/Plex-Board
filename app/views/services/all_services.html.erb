<% provide(:title, "All Services") %>

<%= render 'layouts/servicepanel' %>

<div class="col-sm-8">    
  <h2>All Services</h2>
  <div class"row">
    <div class="panel panel-default">
      <table class="table table-bordered">
        <th>Service Name</th>
        <th>IP Address</th>
        <th>DNS Name</th>
        <th>Port</th>
        <th>URL</th>
        <th></th>
        <% @services.each do |f| %>
          <tr>
          <td><%= f.name %></td>
          <td><%= f.ip %></td>
          <td><%= f.dns_name %></td>
          <td><%= f.port %> </td>
          <td><%= f.url %> </td>
          <td class="text-center"><%= link_to 'Edit', edit_service_path(f), class: "btn btn-md btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    
    </div>
  <div class="pull-right">
  <%= link_to "Add New Service", new_service_path, class: "btn btn-success" %>
  </div>
  
  </div>
  
</div>

<%= render 'layouts/rightbar' %>
