<div class="col-sm-2">
  <div class="row">
  <% if !@services.empty? || !@services.blank? %>
    <div class="col-md-12">
         <h2><%= link_to "Services", all_services_path, class: "services_link" %></h2>
    <% @services.each do |service| %>
      <div class="row">
         <div class="col-lg-4"  id="servicepanel">
           <% if service.online_status %>
           <div id="online">
             <%= link_to service.url, class: "services_link", :target => "_blank" do %>
              <button class="btn btn-xs btn-success" style="width:62px">
              <span class="glyphicon glyphicon-ok" style="color:white;"></span> Online</button>
              <div style="padding:1px"></div>
            <% end %>
           </div>

          <% else %>
            <div id="offline">
              <%= link_to service.url, class: "services_link", :target => "_blank" do %>
                <button class="btn btn-xs btn-warning" style="width:62px">
                <span class="glyphicon glyphicon-remove" style="color:white;"></span> Offline</button>
                <div style="padding:1px"></div>
              <% end %>
            </div>
          <% end %>
          </div>
          <div class="col-lg-8" style="padding-left:20px">
              <%= link_to service.name, service, class: "services_link" %>
          </div>
      </div>
    <% end %>

    </div>
  <% end %>
  </div>
</div>